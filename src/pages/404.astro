---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import { Link } from 'accessible-astro-components'
import PageHeader from '@components/PageHeader.astro'
import { Icon } from 'astro-icon/components'
---

<DefaultLayout title="404" showCallToAction={false}>
  <section class="my-12 text-center">
    <PageHeader
      title="404"
      subtitle="Page Not Found"
      bgType="gradient"
      showBreadcrumbs={false}
    />
  </section>
  <section class="my-12 text-center">
    <div class="space-content container">
      <p class="text-2xl">The page you were trying to access does not exist. Sorry about that!</p>
      <p class="text-2xl">If you think this was an error and the page should be available, please reach out to webmaster@alexsguardian.net</p>
      <Link href="/" isButton type="primary" animateOnHover animationType="nudge">
        Home
        <Icon aria-hidden="true" name="lucide:rocket" size="1.5rem" />
      </Link>
    </div>
  </section>
</DefaultLayout>
