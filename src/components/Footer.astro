---
import CallToAction from './CallToAction.astro'
import { Icon } from 'astro-icon/components'
import { Heading, Link } from 'accessible-astro-components'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const { showCallToAction = true } = Astro.props
const currentYear = new Date().getFullYear()
---

<footer>

  {showCallToAction && <CallToAction />}

  <section class="py-20">

    <Heading level="h2" class="sr-only">Footer</Heading>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <div class="flex flex-col gap-4">
        <Heading level="h3" size="h6">External</Heading>
        <ul class="flex flex-col gap-2">
          <!-- <li>
            <Link isExternal href="https://uisp.alexsguardian.net/crm/login">WISP Portal</Link>
          </li> -->
          <li>
            <Link isExternal href="https://blog.alexsguardian.net">Alex's Blog</Link>
          </li>
          <li>
            <Link isExternal href="https://discord.gg/nf4nmnhYUC">Discord</Link>
          </li>
          <!-- <li>
            <Link isExternal href="https://status.alexsguardian.net">Status</Link>
          </li> -->
        </ul>
      </div>

      <div class="flex flex-col gap-4">
        <Heading level="h3" size="h6">Support</Heading>
        <ul class="flex flex-col gap-2">
          <!-- <li>
            <Link href="/support#affiliate">Affiliate Links</Link>
          </li> -->

          <li>
            <Link href="/loaner-program">Loaner Program</Link>
          </li>
        </ul>
      </div>

      <div class="flex flex-col gap-4">
        <Heading level="h3" size="h6">Company</Heading>
        <ul class="flex flex-col gap-2">
          <li>
            <Link href="/about">About</Link>
          </li>
          <li>
            <Link href="/privacy-policy">Privacy Policy</Link>
          </li>
        </ul>
      </div>

    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} - Alex's Guardian. All Rights Reserved.
      </p>
      <div class="flex flex-row gap-2">
        <Link href="https://bsky.app/profile/alexsguardian.net" class="type-icon animate-rotate" title="Bluesky Profile">
          <Icon aria-hidden="true" name="lucide:hash" />
          <span class="sr-only">Go to the Bluesky profile</span>
        </Link>
        <Link href="https://www.facebook.com/people/Alexs-Guardian/100064867567241/" class="type-icon animate-rotate" title="Facebook Profile">
          <Icon aria-hidden="true" name="lucide:facebook" />
          <span class="sr-only">Go to the Facebook profile</span>
        </Link>
        <Link href="https://github.com/alexsguardian/website" class="type-icon animate-rotate" title="GitHub Organization">
          <Icon aria-hidden="true" name="lucide:github" />
          <span class="sr-only">Go to the GitHub organization</span>
        </Link>
      </div>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
