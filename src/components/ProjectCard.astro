---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    body: string;
    aux: string;
    img: string;
}

const { img, aux, title, body } = Astro.props;
---
<div class="lg:w-1/3 sm:w-1/2 p-4">
    <div class="flex relative">
        <Image src={img} alt="gallery" width="600" height="360" class="absolute inset-0 object-center"/>
        <!-- <img alt="gallery" class="absolute inset-0 w-full h-full object-cover object-center" src={img}> -->
        <div class="px-8 py-10 relative z-10 w-full h-full border-4 border-gray-200 bg-white opacity-0 hover:opacity-85">
            <h2 class="tracking-widest text-lg title-font text-gray-900 font-medium mb-1">{title}</h2>
            <h3 class="title-font text-sm font-medium text-gray-900 mb-3">{body}</h1>
            <p class="leading-relaxed text-sm text-gray-900">{aux}</p>
        </div>
    </div>
</div>